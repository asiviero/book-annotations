<form method="post" action="{{ path('annotation_delete', {'annotationId': annotation.annotationId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annotation.annotationId) }}">
    <button class="btn">Delete</button>
</form>
