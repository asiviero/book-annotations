<form method="post" action="{{ path('book_delete', {'bookId': book.bookId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.bookId) }}">
    <button class="btn">Delete</button>
</form>
